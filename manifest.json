{
  "manifest_version": 3,
  "name": "Sholat Reminder",
  "version": "1.3.1",
  "description": "Pengingat waktu sholat dengan pop-up, countdown, geolokasi, dan autocomplete kota. Waktu 24 jam.",
  "permissions": [
    "storage",
    "alarms",
    "geolocation",
    "notifications"
  ],
  "host_permissions": [
    "https://api.aladhan.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Sholat Reminder",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon-sholat.png",
    "48": "icon-sholat.png",
    "128": "icon-sholat.png"
  }
}
