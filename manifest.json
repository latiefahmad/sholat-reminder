{
  "manifest_version": 3,
  "name": "Sholat Reminder",
  "version": "1.3.1",
  "description": "Pengingat waktu sholat dengan pop-up, countdown, geolokasi, dan autocomplete kota. Waktu 24 jam.",
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "geolocation"
  ],
  "host_permissions": [
    "https://api.aladhan.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "Sholat Reminder",
    "default_popup": "popup.html"
  }
}