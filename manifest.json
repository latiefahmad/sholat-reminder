{
  "manifest_version": 3,
  "name": "Sholat Reminder",
  "version": "1.4.0",
  "description": "Pengingat waktu sholat dengan pop-up, countdown, geolokasi, dan autocomplete kota. Mendukung eQuran.id (Kemenag RI) dan Aladhan.com.",
  "permissions": [
    "storage",
    "alarms",
    "geolocation",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "https://api.aladhan.com/*",
    "https://equran.id/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_title": "Sholat Reminder",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon-sholat.png",
    "48": "icon-sholat.png",
    "128": "icon-sholat.png"
  }
}
